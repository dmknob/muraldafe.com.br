<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-8 gap-4">
        <div>
            <h1 class="text-3xl font-display text-gray-900">Intercessores</h1>
            <p class="text-gray-500 font-serif italic">Gerenciamento de figuras de fé</p>
        </div>
        <a href="/admin/intercessores/novo"
            class="w-full sm:w-auto justify-center bg-wine hover:bg-wine/90 text-white px-4 py-2 rounded shadow-sm transition flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24"
                stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            Novo Intercessor
        </a>
    </div>

    <% if (locals.error) { %>
        <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-6" role="alert">
            <p class="font-bold">Erro</p>
            <p>
                <%= error==='dependency'
                    ? 'Não é possível excluir: existem comunidades ou graças vinculadas a este intercessor.' : error %>
            </p>
            <% if (locals.details) { %>
                <p class="text-sm">
                    <%= details %>
                </p>
                <% } %>
        </div>
        <% } %>

            <% if (locals.success) { %>
                <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-6" role="alert">
                    <p class="font-bold">Sucesso</p>
                    <p>
                        <%= success==='created' ? 'Intercessor criado com sucesso.' : '' %>
                            <%= success==='updated' ? 'Intercessor atualizado com sucesso.' : '' %>
                                <%= success==='deleted' ? 'Intercessor removido com sucesso.' : '' %>
                    </p>
                </div>
                <% } %>

                    <!-- Desktop Table -->
                    <div class="hidden md:block bg-white shadow-sm rounded-lg border border-gray-200 overflow-hidden">
                        <table class="min-w-full divide-y divide-gray-200">
                            <thead class="bg-gray-50">
                                <tr>
                                    <th
                                        class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        Nome</th>
                                    <th
                                        class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider hidden md:table-cell">
                                        Slug</th>
                                    <th
                                        class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        Status</th>
                                    <th
                                        class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        Ações</th>
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-gray-200">
                                <% intercessores.forEach(i=> { %>
                                    <tr class="hover:bg-gray-50 transition">
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <div class="flex items-center">
                                                <% if (i.imagem_url) { %>
                                                    <img class="h-10 w-10 rounded-full object-cover mr-3 border border-gray-200"
                                                        src="<%= i.imagem_url %>" alt="">
                                                    <% } else { %>
                                                        <div
                                                            class="h-10 w-10 rounded-full bg-gray-200 flex items-center justify-center mr-3 text-gray-400">
                                                            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24"
                                                                stroke="currentColor">
                                                                <path stroke-linecap="round" stroke-linejoin="round"
                                                                    stroke-width="2"
                                                                    d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                                                            </svg>
                                                        </div>
                                                        <% } %>
                                                            <div class="text-sm font-medium text-gray-900">
                                                                <%= i.nome %>
                                                            </div>
                                            </div>
                                        </td>
                                        <td
                                            class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 font-mono text-xs hidden md:table-cell">
                                            <%= i.slug %>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <span
                                                class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= i.status === 'publicado' ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                                                <%= i.status %>
                                            </span>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                            <div class="flex justify-end gap-3">
                                                <a href="/intercessores/<%= i.slug %>" target="_blank"
                                                    class="text-gray-400 hover:text-gray-600">Ver</a>
                                                <a href="/admin/intercessores/<%= i.id %>/editar"
                                                    class="text-gold hover:text-wine">Editar</a>
                                                <form action="/admin/intercessores/<%= i.id %>/deletar" method="POST"
                                                    class="inline"
                                                    onsubmit="return confirm('Tem certeza que deseja excluir este intercessor?');">
                                                    <button type="submit"
                                                        class="text-red-600 hover:text-red-900">Excluir</button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                    </div>

                    <!-- Mobile Cards -->
                    <div class="md:hidden space-y-4">
                        <% intercessores.forEach(i=> { %>
                            <div class="bg-white shadow-sm rounded-lg border border-gray-200 p-4">
                                <div class="flex items-center justify-between mb-4">
                                    <div class="flex items-center">
                                        <% if (i.imagem_url) { %>
                                            <img class="h-12 w-12 rounded-full object-cover mr-3 border border-gray-200"
                                                src="<%= i.imagem_url %>" alt="">
                                            <% } else { %>
                                                <div
                                                    class="h-12 w-12 rounded-full bg-gray-200 flex items-center justify-center mr-3 text-gray-400">
                                                    <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24"
                                                        stroke="currentColor">
                                                        <path stroke-linecap="round" stroke-linejoin="round"
                                                            stroke-width="2"
                                                            d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                                                    </svg>
                                                </div>
                                                <% } %>
                                                    <div>
                                                        <h3 class="text-lg font-bold text-gray-900">
                                                            <%= i.nome %>
                                                        </h3>
                                                        <span
                                                            class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= i.status === 'publicado' ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                                                            <%= i.status %>
                                                        </span>
                                                    </div>
                                    </div>
                                    <a href="/intercessores/<%= i.slug %>" target="_blank"
                                        class="text-gray-400 hover:text-gold">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none"
                                            viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                                        </svg>
                                    </a>
                                </div>
                                <div class="text-xs font-mono text-gray-400 mb-4 bg-gray-50 p-2 rounded truncate">
                                    /<%= i.slug %>
                                </div>
                                <div class="flex justify-between gap-3 border-t border-gray-100 pt-3">
                                    <a href="/admin/intercessores/<%= i.id %>/editar"
                                        class="flex-1 text-center py-2 bg-gray-50 hover:bg-gray-100 text-gold font-medium rounded transition">
                                        Editar
                                    </a>
                                    <form action="/admin/intercessores/<%= i.id %>/deletar" method="POST" class="flex-1"
                                        onsubmit="return confirm('Tem certeza que deseja excluir este intercessor?');">
                                        <button type="submit"
                                            class="w-full py-2 bg-red-50 hover:bg-red-100 text-red-600 font-medium rounded transition">
                                            Excluir
                                        </button>
                                    </form>
                                </div>
                            </div>
                            <% }) %>
                    </div>
</div>