<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="mb-8">
        <h1 class="text-3xl font-display text-gray-900">Dashboard</h1>
        <p class="text-gray-500 font-serif italic">Visão geral do sistema</p>
    </div>

    <!-- Cards Stats -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-10">
        <!-- Intercessores -->
        <div class="bg-white p-6 rounded-lg shadow-sm border border-gold/20 hover:shadow-md transition">
            <div class="flex items-center justify-between">
                <div>
                    <h3 class="text-gray-500 text-sm font-bold uppercase tracking-wider">Intercessores</h3>
                    <p class="text-3xl font-display font-bold text-wine mt-2">
                        <%= totalIntercessores %>
                    </p>
                </div>
                <div class="text-gold opacity-50">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24"
                        stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                            d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                    </svg>
                </div>
            </div>
            <a href="/admin/intercessores" class="block mt-4 text-sm text-gold hover:text-wine font-medium">Gerenciar
                todos &rarr;</a>
        </div>

        <!-- Comunidades -->
        <div class="bg-white p-6 rounded-lg shadow-sm border border-gold/20 hover:shadow-md transition">
            <div class="flex items-center justify-between">
                <div>
                    <h3 class="text-gray-500 text-sm font-bold uppercase tracking-wider">Comunidades</h3>
                    <p class="text-3xl font-display font-bold text-wine mt-2">
                        <%= totalComunidades %>
                    </p>
                </div>
                <div class="text-gold opacity-50">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24"
                        stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                            d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                    </svg>
                </div>
            </div>
            <a href="/admin/comunidades" class="block mt-4 text-sm text-gold hover:text-wine font-medium">Gerenciar
                todas &rarr;</a>
        </div>

        <!-- Graças -->
        <div class="bg-white p-6 rounded-lg shadow-sm border border-gold/20 hover:shadow-md transition">
            <div class="flex items-center justify-between">
                <div>
                    <h3 class="text-gray-500 text-sm font-bold uppercase tracking-wider">Graças</h3>
                    <p class="text-3xl font-display font-bold text-wine mt-2">
                        <%= totalGracas %>
                    </p>
                </div>
                <div class="text-gold opacity-50">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24"
                        stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                            d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                    </svg>
                </div>
            </div>
            <a href="/admin/gracas" class="block mt-4 text-sm text-gold hover:text-wine font-medium">Gerenciar todas
                &rarr;</a>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="mb-10 flex flex-col sm:flex-row gap-3">
        <a href="/admin/gracas/nova"
            class="flex items-center justify-center px-4 py-2.5 bg-wine text-white rounded hover:bg-wine/90 transition shadow-sm">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24"
                stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            Nova Graça
        </a>
        <a href="/admin/intercessores/novo"
            class="flex items-center justify-center px-4 py-2.5 border border-wine text-wine rounded hover:bg-wine hover:text-white transition">
            <span class="mr-2">+</span> Novo Intercessor
        </a>
        <a href="/admin/comunidades/nova"
            class="flex items-center justify-center px-4 py-2.5 border border-wine text-wine rounded hover:bg-wine hover:text-white transition">
            <span class="mr-2">+</span> Nova Comunidade
        </a>
    </div>

    <!-- Recent Activity -->
    <div class="bg-white rounded-lg shadow border border-gray-200 overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200">
            <h3 class="text-lg font-bold text-gray-800">Últimas Graças Registradas</h3>
        </div>

        <!-- Desktop Table -->
        <div class="hidden md:block overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Devoto</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Intercessor</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Local
                        </th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Status</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Data
                        </th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Ações</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    <% if (ultimasGracas.length===0) { %>
                        <tr>
                            <td colspan="6" class="px-6 py-4 text-center text-sm text-gray-500 italic">
                                Nenhuma graça registrada ainda.
                            </td>
                        </tr>
                        <% } %>

                            <% ultimasGracas.forEach(graca=> { %>
                                <tr class="hover:bg-gray-50 transition">
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm font-medium text-gray-900">
                                            <%= graca.nome_exibicao %>
                                        </div>
                                        <% if (graca.nome_privado) { %>
                                            <div class="text-xs text-gray-500">
                                                <%= graca.nome_privado %>
                                            </div>
                                            <% } %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                        <%= graca.intercessor_nome %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                        <%= graca.localidade %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <span
                                            class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= graca.status === 'publicado' ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                                            <%= graca.status==='publicado' ? 'Publicado' : 'Rascunho' %>
                                        </span>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                        <%= new Date(graca.criado_em).toLocaleDateString() %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                        <a href="/admin/gracas/<%= graca.id %>/editar"
                                            class="text-gold hover:text-wine mr-4">Editar</a>
                                        <a href="/intercessores/mock/<%= graca.slug %>" target="_blank"
                                            class="text-gray-400 hover:text-gray-600">Ver</a>
                                    </td>
                                </tr>
                                <% }) %>
                </tbody>
            </table>
        </div>

        <!-- Mobile Cards -->
        <div class="md:hidden p-4 space-y-4">
            <% if (ultimasGracas.length===0) { %>
                <p class="text-center text-sm text-gray-500 italic py-8">
                    Nenhuma graça registrada ainda.
                </p>
                <% } %>

                    <% ultimasGracas.forEach(graca=> { %>
                        <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
                            <div class="flex items-start justify-between mb-3">
                                <div class="flex-1">
                                    <h4 class="text-base font-bold text-gray-900 mb-1">
                                        <%= graca.nome_exibicao %>
                                    </h4>
                                    <% if (graca.nome_privado) { %>
                                        <p class="text-xs text-gray-400 mb-2">
                                            (<%= graca.nome_privado %>)
                                        </p>
                                        <% } %>
                                </div>
                                <span
                                    class="px-2 py-0.5 inline-flex text-xs leading-5 font-semibold rounded-full <%= graca.status === 'publicado' ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                                    <%= graca.status==='publicado' ? 'Publicado' : 'Rascunho' %>
                                </span>
                            </div>

                            <div class="space-y-1 mb-3 text-sm">
                                <p class="text-gray-600">
                                    <span class="font-semibold text-wine">Intercessor:</span>
                                    <%= graca.intercessor_nome %>
                                </p>
                                <p class="text-gray-500 flex items-center">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 mr-1" viewBox="0 0 20 20"
                                        fill="currentColor">
                                        <path fill-rule="evenodd"
                                            d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z"
                                            clip-rule="evenodd" />
                                    </svg>
                                    <%= graca.localidade %>
                                </p>
                                <p class="text-xs text-gray-400">
                                    <%= new Date(graca.criado_em).toLocaleDateString() %>
                                </p>
                            </div>

                            <div class="flex gap-2 border-t border-gray-200 pt-3">
                                <a href="/admin/gracas/<%= graca.id %>/editar"
                                    class="flex-1 text-center py-2 bg-white hover:bg-gray-100 text-gold font-medium rounded border border-gray-200 transition">
                                    Editar
                                </a>
                                <a href="/intercessores/mock/<%= graca.slug %>" target="_blank"
                                    class="flex items-center justify-center p-2 text-gray-400 hover:text-gold hover:bg-white rounded border border-gray-200">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none"
                                        viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                                    </svg>
                                </a>
                            </div>
                        </div>
                        <% }) %>
        </div>

        <div class="px-6 py-3 border-t border-gray-200 bg-gray-50 text-right">
            <a href="/admin/gracas" class="text-sm font-medium text-wine hover:text-wine/80">Ver todas &rarr;</a>
        </div>
    </div>
</div>