<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-8 gap-4">
        <div>
            <h1 class="text-3xl font-display text-gray-900">Comunidades</h1>
            <p class="text-gray-500 font-serif italic">Gerenciamento de paróquias e santuários</p>
        </div>
        <a href="/admin/comunidades/nova"
            class="w-full sm:w-auto justify-center bg-wine hover:bg-wine/90 text-white px-4 py-2 rounded shadow-sm transition flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24"
                stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            Nova Comunidade
        </a>
    </div>

    <% if (locals.error) { %>
        <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-6" role="alert">
            <p class="font-bold">Erro</p>
            <p>
                <%= error==='dependency' ? 'Não é possível excluir: existem graças vinculadas a esta comunidade.' :
                    error %>
            </p>
            <% if (locals.details) { %>
                <p class="text-sm">
                    <%= details %>
                </p>
                <% } %>
        </div>
        <% } %>

            <% if (locals.success) { %>
                <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-6" role="alert">
                    <p class="font-bold">Sucesso</p>
                    <p>
                        <%= success==='created' ? 'Comunidade criada com sucesso.' : '' %>
                            <%= success==='updated' ? 'Comunidade atualizada com sucesso.' : '' %>
                                <%= success==='deleted' ? 'Comunidade removida com sucesso.' : '' %>
                    </p>
                </div>
                <% } %>

                    <!-- Desktop Table -->
                    <div class="hidden md:block bg-white shadow-sm rounded-lg border border-gray-200 overflow-hidden">
                        <table class="min-w-full divide-y divide-gray-200">
                            <thead class="bg-gray-50">
                                <tr>
                                    <th
                                        class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        Nome</th>
                                    <th
                                        class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        Padroeiro</th>
                                    <th
                                        class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider hidden md:table-cell">
                                        Slug</th>
                                    <th
                                        class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        Status</th>
                                    <th
                                        class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        Ações</th>
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-gray-200">
                                <% comunidades.forEach(c=> { %>
                                    <tr class="hover:bg-gray-50 transition">
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <div class="text-sm font-medium text-gray-900">
                                                <%= c.nome %>
                                            </div>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                            <%= c.padroeiro_nome %>
                                        </td>
                                        <td
                                            class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 font-mono text-xs hidden md:table-cell">
                                            <%= c.slug %>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <span
                                                class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= c.status === 'publicado' ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                                                <%= c.status %>
                                            </span>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                            <div class="flex justify-end gap-3">
                                                <a href="/comunidades/<%= c.slug %>" target="_blank"
                                                    class="text-gray-400 hover:text-gray-600">Ver</a>
                                                <a href="/admin/comunidades/<%= c.id %>/editar"
                                                    class="text-gold hover:text-wine">Editar</a>
                                                <form action="/admin/comunidades/<%= c.id %>/deletar" method="POST"
                                                    class="inline"
                                                    onsubmit="return confirm('Tem certeza que deseja excluir esta comunidade?');">
                                                    <button type="submit"
                                                        class="text-red-600 hover:text-red-900">Excluir</button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                    </div>

                    <!-- Mobile Cards -->
                    <div class="md:hidden space-y-4">
                        <% comunidades.forEach(c=> { %>
                            <div class="bg-white shadow-sm rounded-lg border border-gray-200 p-4">
                                <div class="flex items-start justify-between mb-2">
                                    <div>
                                        <h3 class="text-lg font-bold text-gray-900 mb-1">
                                            <%= c.nome %>
                                        </h3>
                                        <div class="flex items-center text-sm text-gray-500 mb-2">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1 text-gold"
                                                viewBox="0 0 20 20" fill="currentColor">
                                                <path
                                                    d="M10.394 2.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84L5.25 8.051a.999.999 0 01.356-.257l4-1.714a1 1 0 11.788 1.838L7.667 9.088l1.94.831a1 1 0 00.787 0l7-3a1 1 0 000-1.838l-7-3zM3.31 9.397L5 10.12v4.102a8.969 8.969 0 00-1.05-.174 1 1 0 01-.89-.89 11.115 11.115 0 01.25-3.762zM9.3 16.573A9.026 9.026 0 007 14.935v-3.957l1.818.78a3 3 0 002.364 0l5.508-2.361a11.026 11.026 0 01.25 3.762 1 1 0 01-.89.89 8.968 8.968 0 00-5.35 2.524 1 1 0 01-1.4 0zM6 18a1 1 0 001-1v-2.065a8.935 8.935 0 00-2-.712V17a1 1 0 001 1z" />
                                            </svg>
                                            Padroeiro: <%= c.padroeiro_nome %>
                                        </div>
                                    </div>
                                    <span
                                        class="px-2 py-0.5 inline-flex text-xs leading-5 font-semibold rounded-full <%= c.status === 'publicado' ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                                        <%= c.status %>
                                    </span>
                                </div>
                                <div class="text-xs font-mono text-gray-400 mb-4 bg-gray-50 p-2 rounded truncate">
                                    /<%= c.slug %>
                                </div>
                                <div class="flex justify-between gap-3 border-t border-gray-100 pt-3">
                                    <a href="/comunidades/<%= c.slug %>" target="_blank"
                                        class="flex items-center justify-center p-2 text-gray-400 hover:text-gold hover:bg-gray-50 rounded">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none"
                                            viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                                        </svg>
                                    </a>
                                    <a href="/admin/comunidades/<%= c.id %>/editar"
                                        class="flex-1 text-center py-2 bg-gray-50 hover:bg-gray-100 text-gold font-medium rounded transition">
                                        Editar
                                    </a>
                                    <form action="/admin/comunidades/<%= c.id %>/deletar" method="POST" class="flex-1"
                                        onsubmit="return confirm('Tem certeza que deseja excluir esta comunidade?');">
                                        <button type="submit"
                                            class="w-full py-2 bg-red-50 hover:bg-red-100 text-red-600 font-medium rounded transition">
                                            Excluir
                                        </button>
                                    </form>
                                </div>
                            </div>
                            <% }) %>
                    </div>
</div>