<section
    class="min-h-screen flex flex-col items-center justify-center p-6 bg-primary text-ivory relative overflow-hidden">
    <!-- Background Element -->
    <div class="absolute inset-0 bg-[url('/images/bg-texture.png')] opacity-20 bg-cover bg-center -z-10"></div>
    <div class="absolute inset-0 bg-gradient-to-b from-black via-transparent to-black -z-10"></div>

    <div class="max-w-2xl w-full space-y-8 relative z-10">
        <!-- Header: Intercessor Link -->
        <div class="text-center mb-8">
            <a href="/intercessores/<%= intercessor.slug %>"
                class="group inline-flex items-center gap-2 text-gold/60 hover:text-gold transition-colors duration-300">
                <svg xmlns="http://www.w3.org/2000/svg"
                    class="h-4 w-4 transform group-hover:-translate-x-1 transition-transform" fill="none"
                    viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                </svg>
                <span class="font-display uppercase tracking-widest text-sm">Mural de <%= intercessor.nome %></span>
            </a>
        </div>

        <!-- Content Card -->
        <div class="bg-zinc-900/80 backdrop-blur-md border border-wine/30 p-8 md:p-12 rounded-xl shadow-2xl relative">
            <!-- Decorative Icon -->
            <div
                class="absolute -top-6 left-1/2 transform -translate-x-1/2 bg-black border border-gold/30 p-3 rounded-full">
                <span class="font-display text-2xl text-gold">†</span>
            </div>

            <!-- Title -->
            <div class="text-center mb-8 border-b border-white/5 pb-8">
                <h1 class="font-display text-3xl md:text-4xl text-gold mb-2">
                    Graça Alcançada
                </h1>
                <p class="font-serif text-ivory/60 italic">
                    Relato de <%= graca.nome_exibicao || 'Devoto' %> • <%= graca.localidade || 'Local não informado' %>
                </p>
            </div>

            <!-- Body -->
            <div class="prose prose-invert prose-gold max-w-none font-serif text-lg leading-relaxed text-ivory/90">
                <p class="whitespace-pre-line">
                    <%= graca.relato %>
                </p>
            </div>

            <!-- Santinho Images (Bottom) -->
            <% if (graca.imagem_santinho_frente) { %>
                <div class="mt-12 pt-12 border-t border-white/5">
                    <h3 class="font-display text-xl text-gold mb-6 text-center">Registro do Santinho</h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="space-y-2">
                            <span class="text-xs text-gold/40 uppercase tracking-widest block text-center">Frente</span>
                            <div class="relative overflow-hidden rounded-lg group cursor-pointer border border-gold/20 hover:border-gold/50 transition-all"
                                onclick="openImageModal('<%= graca.imagem_santinho_frente %>')">
                                <img src="<%= graca.imagem_santinho_frente %>" alt="Santinho Frente"
                                    class="w-full rounded-lg shadow-xl transition-transform duration-500 group-hover:scale-105">
                                <div
                                    class="absolute inset-0 bg-black/0 group-hover:bg-black/20 transition-colors flex items-center justify-center opacity-0 group-hover:opacity-100">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-white drop-shadow-md"
                                        fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v6m3-3H7" />
                                    </svg>
                                </div>
                            </div>
                        </div>
                        <% if (graca.imagem_santinho_verso) { %>
                            <div class="space-y-2">
                                <span
                                    class="text-xs text-gold/40 uppercase tracking-widest block text-center">Verso</span>
                                <div class="relative overflow-hidden rounded-lg group cursor-pointer border border-gold/20 hover:border-gold/50 transition-all"
                                    onclick="openImageModal('<%= graca.imagem_santinho_verso %>')">
                                    <img src="<%= graca.imagem_santinho_verso %>" alt="Santinho Verso"
                                        class="w-full rounded-lg shadow-xl transition-transform duration-500 group-hover:scale-105">
                                    <div
                                        class="absolute inset-0 bg-black/0 group-hover:bg-black/20 transition-colors flex items-center justify-center opacity-0 group-hover:opacity-100">
                                        <svg xmlns="http://www.w3.org/2000/svg"
                                            class="h-8 w-8 text-white drop-shadow-md" fill="none" viewBox="0 0 24 24"
                                            stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v6m3-3H7" />
                                        </svg>
                                    </div>
                                </div>
                            </div>
                            <% } %>
                    </div>
                </div>
                <% } %>

                    <!-- Date -->
                    <div class="mt-8 pt-8 border-t border-white/5 text-right">
                        <span class="font-mono text-xs text-secondary-500">
                            Registrado em <%= new Date(graca.criado_em).toLocaleDateString('pt-BR') %>
                        </span>
                    </div>
        </div>

        <!-- Footer -->
        <div class="text-center space-y-4">
            <p class="font-serif text-sm text-ivory/40">
                Mural da Fé • Registro de Memória Digital
            </p>
            <img src="/images/logo-footer.png" alt="" class="h-8 opacity-30 mx-auto"
                onerror="this.style.display='none'">
        </div>
    </div>

    <!-- Image Lightbox Modal -->
    <div id="image-modal"
        class="fixed inset-0 z-[100] hidden bg-black/95 backdrop-blur-md flex items-center justify-center p-4"
        onclick="closeImageModal()">
        <div class="relative max-w-5xl w-full max-h-[90vh]">
            <img id="modal-image" src="" alt=""
                class="w-full h-full object-contain rounded-lg shadow-2xl border border-white/10">
            <button class="absolute -top-12 right-0 text-white/50 hover:text-white transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24"
                    stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </button>
        </div>
    </div>

    <script>
        function openImageModal(src) {
            const modal = document.getElementById('image-modal');
            const img = document.getElementById('modal-image');
            img.src = src;
            modal.classList.remove('hidden');
            document.body.style.overflow = 'hidden';
        }

        function closeImageModal() {
            const modal = document.getElementById('image-modal');
            modal.classList.add('hidden');
            document.body.style.overflow = '';
        }
    </script>
</section>