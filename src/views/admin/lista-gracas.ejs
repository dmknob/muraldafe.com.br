<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-8 gap-4">
        <div>
            <h1 class="text-3xl font-display text-gray-900">Graças Alcançadas</h1>
            <p class="text-gray-500 font-serif italic">Gerenciamento de testemunhos e santinhos</p>
        </div>
        <a href="/admin/gracas/nova"
            class="w-full sm:w-auto justify-center bg-wine hover:bg-wine/90 text-white px-4 py-2 rounded shadow-sm transition flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24"
                stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            Nova Graça
        </a>
    </div>

    <% if (locals.error) { %>
        <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-6" role="alert">
            <p class="font-bold">Erro</p>
            <p>
                <%= error %>
            </p>
        </div>
        <% } %>

            <% if (locals.success) { %>
                <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-6" role="alert">
                    <p class="font-bold">Sucesso</p>
                    <p>
                        <%= success==='created' ? 'Graça criada com sucesso.' : '' %>
                            <%= success==='updated' ? 'Graça atualizada com sucesso.' : '' %>
                                <%= success==='deleted' ? 'Graça removida com sucesso.' : '' %>
                    </p>
                </div>
                <% } %>

                    <!-- Desktop Table -->
                    <div class="hidden md:block bg-white shadow-sm rounded-t-lg border border-gray-200 overflow-hidden">
                        <table class="min-w-full divide-y divide-gray-200">
                            <thead class="bg-gray-50">
                                <tr>
                                    <th
                                        class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        Nome (Exibição)</th>
                                    <th
                                        class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        Intercessor</th>
                                    <th
                                        class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider hidden md:table-cell">
                                        Comunidade</th>
                                    <th
                                        class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider hidden lg:table-cell">
                                        Local</th>
                                    <th
                                        class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        Status</th>
                                    <th
                                        class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        Ações</th>
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-gray-200">
                                <% gracas.forEach(g=> { %>
                                    <tr class="hover:bg-gray-50 transition">
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <div class="text-sm font-medium text-gray-900">
                                                <%= g.nome_exibicao %>
                                            </div>
                                            <% if (g.nome_privado) { %>
                                                <div class="text-xs text-gray-500">
                                                    <%= g.nome_privado %>
                                                </div>
                                                <% } %>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                            <%= g.intercessor_nome %>
                                        </td>
                                        <td
                                            class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 hidden md:table-cell">
                                            <%= g.comunidade_nome || '-' %>
                                        </td>
                                        <td
                                            class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 hidden lg:table-cell">
                                            <%= g.localidade %>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <span
                                                class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= g.status === 'publicado' ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                                                <%= g.status %>
                                            </span>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                            <div class="flex justify-end gap-3">
                                                <a href="/admin/gracas/<%= g.id %>/editar"
                                                    class="text-gold hover:text-wine mr-3">Editar</a>
                                                <form action="/admin/gracas/<%= g.id %>/deletar" method="POST"
                                                    class="inline"
                                                    onsubmit="return confirm('Tem certeza que deseja excluir esta graça?');">
                                                    <button type="submit"
                                                        class="text-red-600 hover:text-red-900">Excluir</button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                    </div>

                    <!-- Mobile Cards -->
                    <div class="md:hidden space-y-4 mb-4">
                        <% gracas.forEach(g=> { %>
                            <div class="bg-white shadow-sm rounded-lg border border-gray-200 p-4">
                                <div class="flex items-start justify-between mb-2">
                                    <div>
                                        <h3 class="text-lg font-bold text-gray-900 leading-tight mb-1">
                                            <%= g.nome_exibicao %>
                                        </h3>
                                        <% if (g.nome_privado) { %>
                                            <p class="text-xs text-gray-400 mb-2">
                                                (<%= g.nome_privado %>)
                                            </p>
                                            <% } else { %>
                                                <div class="mb-2"></div>
                                                <% } %>
                                                    <p class="text-sm text-gray-600 flex items-center mb-1">
                                                        <span class="font-bold text-wine mr-1">Intercessor:</span>
                                                        <%= g.intercessor_nome %>
                                                    </p>
                                                    <p class="text-xs text-gray-500 flex items-center">
                                                        <svg xmlns="http://www.w3.org/2000/svg"
                                                            class="h-3 w-3 mr-1 text-gray-400" viewBox="0 0 20 20"
                                                            fill="currentColor">
                                                            <path fill-rule="evenodd"
                                                                d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z"
                                                                clip-rule="evenodd" />
                                                        </svg>
                                                        <%= g.localidade %>
                                                    </p>
                                    </div>
                                    <span
                                        class="px-2 py-0.5 inline-flex text-xs leading-5 font-semibold rounded-full <%= g.status === 'publicado' ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                                        <%= g.status %>
                                    </span>
                                </div>

                                <div class="flex justify-between gap-3 border-t border-gray-100 pt-3 mt-2">
                                    <a href="/admin/gracas/<%= g.id %>/editar"
                                        class="flex-1 text-center py-2 bg-gray-50 hover:bg-gray-100 text-gold font-medium rounded transition">
                                        Editar
                                    </a>
                                    <form action="/admin/gracas/<%= g.id %>/deletar" method="POST" class="flex-1"
                                        onsubmit="return confirm('Tem certeza que deseja excluir esta graça?');">
                                        <button type="submit"
                                            class="w-full py-2 bg-red-50 hover:bg-red-100 text-red-600 font-medium rounded transition">
                                            Excluir
                                        </button>
                                    </form>
                                </div>
                            </div>
                            <% }) %>
                    </div>

                    <!-- Paginação Shared -->
                    <div
                        class="bg-white shadow-sm rounded-lg md:rounded-tl-none md:rounded-tr-none border border-gray-200 md:border-t-0 px-4 py-3 sm:px-6">
                        <div class="flex-1 flex flex-col sm:flex-row items-center justify-between gap-4">
                            <div>
                                <p class="text-sm text-gray-700">
                                    Página <span class="font-medium">
                                        <%= currentPage %>
                                    </span> de <span class="font-medium">
                                        <%= totalPages %>
                                    </span>
                                </p>
                            </div>
                            <div>
                                <nav class="relative z-0 inline-flex rounded-md shadow-sm -space-x-px"
                                    aria-label="Pagination">
                                    <% if (currentPage> 1) { %>
                                        <a href="?page=<%= currentPage - 1 %>"
                                            class="relative inline-flex items-center px-4 py-2 rounded-l-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                                            <span class="sr-only">Anterior</span>
                                            <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"
                                                fill="currentColor" aria-hidden="true">
                                                <path fill-rule="evenodd"
                                                    d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z"
                                                    clip-rule="evenodd" />
                                            </svg>
                                            <span class="ml-1 sm:hidden">Ant</span>
                                        </a>
                                        <% } %>

                                            <% if (currentPage < totalPages) { %>
                                                <a href="?page=<%= currentPage + 1 %>"
                                                    class="relative inline-flex items-center px-4 py-2 rounded-r-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                                                    <span class="mr-1 sm:hidden">Próx</span>
                                                    <span class="sr-only">Próximo</span>
                                                    <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg"
                                                        viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                                        <path fill-rule="evenodd"
                                                            d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                                                            clip-rule="evenodd" />
                                                    </svg>
                                                </a>
                                                <% } %>
                                </nav>
                            </div>
                        </div>
                    </div>
</div>