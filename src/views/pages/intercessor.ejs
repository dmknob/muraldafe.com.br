        <script>
            const modal = document.getElementById('grace-modal');
            const backdrop = document.getElementById('modal-backdrop');
            const panel = document.getElementById('modal-panel');
            const gracesData = JSON.parse(document.getElementById('graces-data').textContent);
            let currentSlug = null;

            function openGraceModal(slug) {
                const grace = gracesData.find(g => g.slug === slug);
                if (!grace) return;

                currentSlug = slug;

                // Populate Data
                document.getElementById('modal-title').textContent = grace.nome_exibicao || 'Devoto';
                document.getElementById('modal-subtitle').textContent = `${grace.localidade || 'Local não informado'}`;
                document.getElementById('modal-body').textContent = grace.relato;
                document.getElementById('modal-date').textContent = new Date(grace.criado_em).toLocaleDateString('pt-BR');
                document.getElementById('modal-link').href = `/intercessores/<%= intercessor.slug %>/${grace.slug}`;

                // Handle foto_devoto
                const fotoDevotoContainer = document.getElementById('modal-foto-devoto');
                const fotoDevotoImg = document.getElementById('modal-foto-devoto-img');
                if (grace.foto_devoto) {
                    fotoDevotoImg.src = grace.foto_devoto;
                    fotoDevotoContainer.classList.remove('hidden');
                } else {
                    fotoDevotoContainer.classList.add('hidden');
                    fotoDevotoImg.src = '';
                }

                // Handle santinho images
                const imgContainer = document.getElementById('modal-images');
                const imgFront = document.getElementById('modal-img-front');
                const imgBack = document.getElementById('modal-img-back');
                const imgBackContainer = document.getElementById('modal-img-back-container');

                if (grace.imagem_santinho_frente) {
                    imgContainer.classList.remove('hidden');
                    imgFront.src = grace.imagem_santinho_frente;

                    if (grace.imagem_santinho_verso) {
                        imgBackContainer.classList.remove('hidden');
                        imgBack.src = grace.imagem_santinho_verso;
                        imgContainer.classList.add('md:grid-cols-2');
                    } else {
                        imgBackContainer.classList.add('hidden');
                        imgContainer.classList.remove('md:grid-cols-2');
                    }
                } else {
                    imgContainer.classList.add('hidden');
                }

                // Show Modal
                modal.classList.remove('hidden');
                // Small delay for transition
                setTimeout(() => {
                    backdrop.classList.remove('opacity-0');
                    panel.classList.remove('scale-95', 'opacity-0');
                    panel.classList.add('scale-100', 'opacity-100');
                }, 10);

                // Update URL hash
                history.pushState(null, null, `#${slug}`);
                document.body.style.overflow = 'hidden';

                // GA4: Abertura de relato
                if (typeof gtag !== 'undefined') {
                    gtag('event', 'view_grace_modal', {
                        intercessor: '<%= intercessor.slug %>',
                        grace_slug: slug,
                        grace_name: grace.nome_exibicao || 'Devoto'
                    });
                }
            }

            function closeGraceModal() {
                backdrop.classList.add('opacity-0');
                panel.classList.remove('scale-100', 'opacity-100');
                panel.classList.add('scale-95', 'opacity-0');

                setTimeout(() => {
                    modal.classList.add('hidden');
                    document.body.style.overflow = '';
                    // Clear hash without reloading
                    history.pushState(null, null, window.location.pathname);
                }, 300);
            }

            // Close on click outside panel
            modal.addEventListener('click', (e) => {
                // If the click is NOT inside the panel (or its children), close it
                if (!panel.contains(e.target)) {
                    closeGraceModal();
                }
            });

            // Handle initial hash
            window.addEventListener('load', () => {
                const hash = window.location.hash.substring(1);
                if (hash) {
                    openGraceModal(hash);
                }
            });

            // Handle browser back/forward buttons
            window.addEventListener('popstate', () => {
                const hash = window.location.hash.substring(1);
                if (hash) {
