<!-- Hero Section do Intercessor -->
<div class="relative bg-black text-ivory overflow-hidden mb-12 rounded-xl border border-wine/30">
    <!-- Background Blur/Image -->
    <div class="absolute inset-0 opacity-30">
        <% if (intercessor.imagem_url) { %>
            <img src="<%= intercessor.imagem_url %>" alt="" class="w-full h-full object-cover blur-sm">
            <% } else { %>
                <div class="w-full h-full bg-gradient-to-br from-wine/20 to-black"></div>
                <% } %>
    </div>

    <div class="relative z-10 p-8 md:p-12 flex flex-col md:flex-row gap-8 md:gap-12 items-center">
        <!-- Imagem Principal -->
        <div
            class="w-48 h-48 md:w-64 md:h-64 flex-shrink-0 rounded-full border-4 border-gold/30 overflow-hidden shadow-2xl bg-black">
            <% if (intercessor.imagem_url) { %>
                <img src="<%= intercessor.imagem_url %>" alt="<%= intercessor.nome %>"
                    class="w-full h-full object-cover">
                <% } else { %>
                    <div class="w-full h-full flex items-center justify-center bg-zinc-900">
                        <span class="font-display text-6xl text-gold/20 select-none">†</span>
                    </div>
                    <% } %>
        </div>

        <!-- Informações -->
        <div class="text-center md:text-left space-y-4 max-w-2xl">
            <h1 class="text-3xl md:text-5xl font-display text-gold uppercase tracking-widest">
                <%= intercessor.nome %>
            </h1>

            <% if (intercessor.historia_bio) { %>
                <div class="font-serif text-lg leading-relaxed text-ivory/90">
                    <%- intercessor.historia_bio %>
                </div>
                <% } %>

                    <% if (intercessor.oracao) { %>
                        <div
                            class="mt-6 p-6 bg-wine/10 border-l-2 border-gold/50 rounded-r-lg italic font-serif text-gold/80">
                            "<%= intercessor.oracao %>"
                        </div>
                        <% } %>
        </div>
    </div>
</div>

<!-- Mural de Graças -->
<section class="max-w-7xl mx-auto mb-20">
    <div class="flex items-center justify-between mb-8 md:mb-12 border-b border-wine/20 pb-4">
        <h2 class="text-2xl md:text-3xl font-display text-gold uppercase tracking-wide">
            Minhas Graças
            <span class="text-sm font-serif text-ivory/50 normal-case tracking-normal ml-2">
                (<%= gracas ? gracas.length : 0 %> relatos)
            </span>
        </h2>

        <a href="/intercessores"
            class="text-gold/60 hover:text-gold text-sm uppercase tracking-widest transition-colors flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24"
                stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            Voltar
        </a>
    </div>

    <% if (gracas && gracas.length> 0) { %>
        <div class="grid grid-cols-2 md:grid-cols-3 gap-3 md:gap-6">
            <% gracas.forEach(graca=> { %>
                <!-- Card interativo que abre modal -->
                <div onclick="openGraceModal('<%= graca.slug %>')"
                    class="cursor-pointer group flex flex-col h-full bg-zinc-900/50 border border-white/5 rounded-lg p-4 md:p-6 transition-all duration-300 hover:border-gold/30 hover:bg-wine/10 relative overflow-hidden">

                    <!-- Header do Card -->
                    <div class="flex justify-between items-start mb-2 md:mb-4">
                        <div>
                            <h3 class="font-display text-sm md:text-lg text-gold mb-1">
                                <%= graca.nome_exibicao || 'Devoto' %>
                            </h3>
                            <p class="text-[10px] md:text-xs font-serif text-ivory/50 uppercase tracking-wider">
                                <%= graca.localidade || 'Local não informado' %>
                            </p>
                        </div>
                        <!-- Ícone sutil decorativo -->
                        <div class="opacity-10 group-hover:opacity-30 transition-opacity">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 md:h-8 md:w-8 text-gold" fill="none"
                                viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1"
                                    d="M12 4v16m8-8H4" />
                            </svg>
                        </div>
                    </div>

                    <!-- Resumo do Relato -->
                    <div
                        class="font-serif text-ivory/70 text-xs md:text-sm leading-relaxed mb-4 line-clamp-3 md:line-clamp-4 flex-grow">
                        <%= graca.resumo || graca.relato %>
                    </div>

                    <!-- Footer do Card -->
                    <div class="pt-2 md:pt-4 border-t border-white/5 flex justify-between items-center mt-auto">
                        <span class="text-[10px] md:text-xs text-secondary-400 font-mono">
                            <%= new Date(graca.criado_em).toLocaleDateString() %>
                        </span>
                        <span
                            class="text-[10px] md:text-xs text-gold/60 uppercase tracking-widest group-hover:text-gold transition-colors">
                            Ler relato &rarr;
                        </span>
                    </div>
                </div>
                <% }) %>
        </div>
        <% } else { %>
            <div class="text-center py-20 bg-wine/5 rounded-xl border border-dashed border-wine/20">
                <p class="font-serif text-xl text-ivory/40 italic">
                    Ainda não há graças registradas para este intercessor.
                </p>
                <p class="mt-2 text-sm text-gold/60">
                    Seja o primeiro a compartilhar seu testemunho de fé.
                </p>
            </div>
            <% } %>
</section>

