<section class="py-12 md:py-20">
    <!-- Header da Página -->
    <div class="text-center mb-12 md:mb-16 space-y-4">
        <h1 class="text-4xl md:text-5xl font-display text-gold uppercase tracking-widest">
            Intercessores
        </h1>
        <p class="font-serif text-ivory/80 text-lg max-w-2xl mx-auto">
            Conheça os santos e beatos que intercedem por nós e abrigam as memórias de fé de nossa comunidade.
        </p>
    </div>

    <!-- Grid de Intercessores -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-7xl mx-auto">
        <% intercessores.forEach(intercessor=> { %>
            <a href="/intercessores/<%= intercessor.slug %>" class="group block">
                <div
                    class="bg-wine/10 border border-wine/30 rounded-lg overflow-hidden transition-all duration-300 group-hover:border-gold/50 group-hover:bg-wine/20 group-hover:-translate-y-1 relative">

                    <!-- Imagem / Placeholder -->
                    <div class="aspect-[3/4] overflow-hidden bg-black/40 relative">
                        <% if (intercessor.imagem_url) { %>
                            <img src="<%= intercessor.imagem_url %>" alt="<%= intercessor.nome %>"
                                class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105 opacity-90 group-hover:opacity-100">
                            <% } else { %>
                                <div
                                    class="w-full h-full flex items-center justify-center bg-gradient-to-b from-transparent to-black/80">
                                    <span class="font-display text-6xl text-gold/20 select-none">†</span>
                                </div>
                                <% } %>

                                    <!-- Overlay Gradiente -->
                                    <div
                                        class="absolute inset-0 bg-gradient-to-t from-primary via-transparent to-transparent opacity-80">
                                    </div>
                    </div>

                    <!-- Conteúdo do Card -->
                    <div class="absolute bottom-0 left-0 right-0 p-6 text-center">
                        <h2
                            class="text-2xl font-display text-gold mb-2 tracking-wide group-hover:text-ivory transition-colors">
                            <%= intercessor.nome %>
                        </h2>
                        <span
                            class="inline-block px-4 py-1 border border-gold/30 rounded-full text-xs font-serif text-gold/80 uppercase tracking-widest group-hover:bg-gold group-hover:text-primary transition-all">
                            Ver Mural
                        </span>
                    </div>
                </div>
            </a>
            <% }) %>
    </div>
</section>