        document.addEventListener('DOMContentLoaded', function () {
            const bioContent = document.getElementById('bio-content');
            const btnExpand = document.getElementById('btn-expand-bio');
            const bioFade = document.getElementById('bio-fade');
            let isExpanded = false;

            if (bioContent && bioContent.scrollHeight <= 480) {
                if (btnExpand) btnExpand.parentElement.style.display = 'none';
                if (bioFade) bioFade.style.display = 'none';
                bioContent.style.maxHeight = 'none';
            } else if (btnExpand) {
                btnExpand.addEventListener('click', function () {
                    isExpanded = !isExpanded;
                    if (isExpanded) {
                        bioContent.style.maxHeight = bioContent.scrollHeight + 'px';
